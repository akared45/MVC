@model HW3.Models.Student
@{
    ViewData["Title"] = "Chi tiết sinh viên";
}

<div class="container">
    <h1>Chi tiết sinh viên</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Điện thoại:</strong> @Model.Phone</p>
        </div>
    </div>

    <a href="/aptech/student" class="btn btn-secondary mt-3">Quay lại danh sách</a>
</div>
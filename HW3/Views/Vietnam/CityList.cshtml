@model List<HW3.Models.City>
@{
    ViewData["Title"] = "Danh sách thành phố Việt Nam";
}

<div class="container">
    <h1>Danh sách thành phố Việt Nam</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tên thành phố</th>
                <th>Vùng miền</th>
                <th>Dân số</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var city in Model)
            {
                <tr>
                    <td>@city.Name</td>
                    <td>@city.Region</td>
                    <td>@city.Population.ToString("N0")</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/" class="btn btn-secondary">Trang chủ</a>
</div>
@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Index" method="get" class="mb-3">
    <div class="form-group">
        <label>Search by Title or Author:</label>
        <input name="searchString" class="form-control d-inline-block w-auto" value="@ViewBag.SearchString" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Publication Year</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.PublishedYear</td>
                    <td>@item.Quantity</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        @if (item.Quantity > 0)
                        {
                            <a asp-action="Borrow" asp-route-id="@item.Id" class="btn btn-success btn-sm">Borrow</a>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No books found.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @if (ViewBag.TotalPages > 0)
    {
        @if (ViewBag.CurrentPage > 1)
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@ViewBag.SearchString" class="btn btn-secondary">Previous</a>
        }
        <span>Page @ViewBag.CurrentPage of @ViewBag.TotalPages</span>
        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@ViewBag.SearchString" class="btn btn-secondary">Next</a>
        }
    }
</div>
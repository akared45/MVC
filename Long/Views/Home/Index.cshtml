@model Dictionary<string, List<Long.Models.Product>>

@{
    ViewBag.Title = "Trang Chủ";
}

<h2>Danh Sách Sản Phẩm Theo Hạng Mục</h2>

@foreach (var group in Model)
{
    <h3>@group.Key</h3>
    <div class="row">
        @foreach (var product in group.Value)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">Giá: @product.Price.ToString("N0") VND</p>
                        <p class="card-text">@product.Description.Substring(0, Math.Min(100, product.Description.Length))...</p>
                        <a href="@Url.Action("Detail", "Product", new { id = product.Id })" class="btn btn-primary">Chi Tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("ListByCategory", "Product", new { categoryName = group.Key })" class="btn btn-secondary mb-4">Xem Tất Cả @group.Key</a>
}
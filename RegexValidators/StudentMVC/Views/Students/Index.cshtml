@model IEnumerable<StudentMVC.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<h1>Students List</h1>

<div class="mb-3">
    <a href="@Url.Action("Create", "Students")" class="btn btn-success">Add New Student</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>MiddleName</th>
            <th>LastName</th>
            <th>Birthday</th>
            <th>EClass</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.FirstName</td>
                <td>@student.MiddleName</td>
                <td>@student.LastName</td>
                <td>@student.Birthday?.ToShortDateString()</td>
                <td>@student.EClass</td>
                <td>@student.Phone</td>
                <td>@student.Email</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })" class="btn @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-secondary")">@i</a>
    }
</div>
@model List<dynamic>

@{
    ViewData["Title"] = "Student Marks Management";
    var totalStudents = ViewData["TotalStudents"] as int? ?? 0;
    var averageScore = ViewData["AverageScore"] as string ?? "0";
    var topStudent = ViewData["TopStudent"] as string ?? "0";
    var lowScores = ViewData["LowScores"] as int? ?? 0;
    var currentPage = ViewData["CurrentPage"] as int? ?? 1;
    var totalPages = ViewData["TotalPages"] as int? ?? 1;
    var pageSize = ViewData["PageSize"] as int? ?? 5;
}

<div class="container">
    <h1>Student Marks Management</h1>
    <div class="row mb-3">
        <div class="col-md-6 d-flex align-items-center">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="form-control me-2" placeholder="Search students..." />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>
        </div>
        <div class="col-md-6 d-flex justify-content-end align-items-center">
            <a class="btn btn-primary" asp-controller="Student" asp-action="Create">Add New Student</a>
        </div>
    </div>


    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-light text-center align-middle">
                    <tr>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                                <i class="bi bi-person-fill me-1 text-primary"></i> STUDENT
                            </a>
                        </th>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["MathSortParm"]">
                                <i class="bi bi-calculator-fill me-1 text-success"></i> MATH
                            </a>
                        </th>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["ScienceSortParm"]">
                                <i class="bi bi-lightbulb-fill text-info"></i> SCIENCE
                            </a>
                        </th>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["EnglishSortParm"]">
                                <i class="bi bi-book me-1 text-warning"></i> ENGLISH
                            </a>
                        </th>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["HistorySortParm"]">
                                <i class="bi bi-hourglass-split me-1 text-secondary"></i> HISTORY
                            </a>
                        </th>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["ArtSortParm"]">
                                <i class="bi bi-brush me-1 text-danger"></i> ART
                            </a>
                        </th>
                        <th>
                            <a class="text-decoration-none text-dark d-flex align-items-center justify-content-center"
                               asp-action="Index" asp-route-sortOrder="@ViewData["AverageSortParm"]">
                                <i class="bi bi-graph-up me-1 text-success"></i> AVERAGE
                            </a>
                        </th>
                        <th>
                            <div class="d-flex align-items-center justify-content-center">
                                <i class="bi bi-gear me-1 text-muted"></i> ACTIONS
                            </div>
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td class="text-center align-middle">@item.Math.ToString("F0")</td>
                            <td class="text-center align-middle">@item.Science.ToString("F0")</td>
                            <td class="text-center align-middle">@item.English.ToString("F0")</td>
                            <td class="text-center align-middle">@item.History.ToString("F0")</td>
                            <td class="text-center align-middle">@item.Art.ToString("F0")</td>
                            <td class="align-middle">
                                <div class="progress" style="height: 20px;">
                                    @{
                                        var avg = item.Average;
                                        var progress = avg; 
                                        var barClass = avg >= 80 ? "bg-success"
                                        : avg >= 60 ? "bg-warning"
                                        : "bg-danger";
                                    }
                                    <div class="progress-bar @barClass"
                                         role="progressbar"
                                         style="width:@progress%;"
                                         aria-valuenow="@avg" aria-valuemin="0" aria-valuemax="100">
                                        @avg.ToString("F1")
                                    </div>
                                </div>
                            </td>
                            <td class="text-center align-middle">
                                <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.StudentId">Update</a>
                                <button class="btn btn-sm btn-danger" onclick="confirmDelete(@item.StudentId, '@item.Name')">Delete</button>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="8" class="small text-muted">@item.GradeClass</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, totalStudents) of @totalStudents results
                </div>

                <div class="d-flex align-items-center gap-2">
                    @if (currentPage > 1)
                    {
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="1" class="btn btn-sm btn-outline-primary">First</a>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@(currentPage - 1)" class="btn btn-sm btn-outline-primary">Prev</a>
                    }
                    @{
                        int startPage = Math.Max(1, currentPage - 2);
                        int endPage = Math.Min(totalPages, startPage + 4);

                        for (int i = startPage; i <= endPage; i++)
                        {
                            if (i == currentPage)
                            {
                                <span class="btn btn-sm btn-primary">@i</span>
                            }
                            else
                            {
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@i" class="btn btn-sm btn-outline-primary">@i</a>
                            }
                        }
                    }
                    @if (currentPage < totalPages)
                    {
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@(currentPage + 1)" class="btn btn-sm btn-outline-primary">Next</a>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-page="@totalPages" class="btn btn-sm btn-outline-primary">Last</a>
                    }
                    <form asp-action="Index" method="get" class="d-flex align-items-center gap-1">
                        <input type="hidden" name="sortOrder" value="@ViewData["CurrentSort"]" />
                        <input type="number" name="page" value="@currentPage" min="1" max="@totalPages"
                               class="form-control form-control-sm" style="width: 70px;" />
                        <span>/ @totalPages</span>
                        <button type="submit" class="btn btn-sm btn-outline-secondary">Go</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-4 g-4 mt-4">
        <div class="col">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill display-4 text-primary"></i>
                    <h6 class="card-title mt-2 text-muted">Total Students</h6>
                    <p class="card-text fw-bold display-6 text-dark">@totalStudents</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-bar-chart-line-fill display-4 text-success"></i>
                    <h6 class="card-title mt-2 text-muted">Average Score</h6>
                    <p class="card-text fw-bold display-6 text-success">@averageScore%</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-trophy-fill display-4 text-warning"></i>
                    <h6 class="card-title mt-2 text-muted">Top Student</h6>
                    <p class="card-text fw-bold display-6 text-warning">@topStudent%</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm border-0 text-center h-100">
                <div class="card-body">
                    <i class="bi bi-exclamation-triangle-fill display-4 text-danger"></i>
                    <h6 class="card-title mt-2 text-muted">Low Scores</h6>
                    <p class="card-text fw-bold display-6 text-danger">@lowScores Students</p>
                </div>
            </div>
        </div>
    </div>

</div>

<form id="deleteForm" asp-action="Delete" method="post">
    <input type="hidden" id="deleteId" name="id" />
</form>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            if (confirm(`Are you sure you want to delete ${name}?`)) {
                document.getElementById('deleteId').value = id;
                document.getElementById('deleteForm').submit();
            }
        }
    </script>
}
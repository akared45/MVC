@model b2.Models.Product

@{
    ViewData["Title"] = "Chi tiết Sản phẩm";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index")">Sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <a href="@Url.Action("Index")" class="btn btn-outline-primary mb-4">
        <i class="fas fa-arrow-left me-2"></i>Quay về danh sách
    </a>

    <div class="card shadow-sm border-0 overflow-hidden">
        <div class="row g-0">
            <div class="col-md-5">
                <div class="product-detail-image bg-gradient-primary text-white d-flex align-items-center justify-content-center p-5">
                    <i class="fas fa-box-open fa-5x"></i>
                </div>
            </div>
            <div class="col-md-7">
                <div class="card-body p-5">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="card-title h2">@Model.Name</h1>
                        <span class="badge bg-success">Còn hàng</span>
                    </div>

                    <div class="d-flex align-items-center mb-4">
                        <div class="rating text-warning me-3">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star-half-alt"></i>
                        </div>
                        <span class="text-muted">(128 đánh giá)</span>
                    </div>

                    <h2 class="text-danger fw-bold display-6 mb-4">@Model.Price.ToString("N0") VNĐ</h2>

                    <div class="d-flex gap-2 mb-4">
                        <span class="badge bg-primary">Bảo hành 12 tháng</span>
                        <span class="badge bg-info">Giao hàng miễn phí</span>
                        <span class="badge bg-success">Đổi trả 30 ngày</span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-3 me-3">
                                    <i class="fas fa-shipping-fast text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Giao hàng nhanh</div>
                                    <div class="small text-muted">2-3 ngày</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-3 me-3">
                                    <i class="fas fa-undo-alt text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Đổi trả dễ dàng</div>
                                    <div class="small text-muted">30 ngày</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded-circle p-3 me-3">
                                    <i class="fas fa-shield-alt text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Bảo hành</div>
                                    <div class="small text-muted">12 tháng</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <div class="input-group w-50">
                            <button class="btn btn-outline-secondary" type="button">-</button>
                            <input type="text" class="form-control text-center" value="1">
                            <button class="btn btn-outline-secondary" type="button">+</button>
                        </div>
                        <button class="btn btn-primary btn-lg flex-grow-1">
                            <i class="fas fa-shopping-cart me-2"></i>Thêm vào giỏ hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
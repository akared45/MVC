@model b2.Models.Product

<div class="col-md-6 col-lg-4 col-xl-3 mb-4">
    <div class="card product-card h-100 shadow-sm">
        <div class="card-img-container position-relative">
            <div class="product-image-placeholder bg-gradient-primary text-white d-flex align-items-center justify-content-center">
                <i class="fas fa-box-open fa-3x"></i>
            </div>
            <span class="position-absolute top-0 start-0 bg-primary text-white px-2 py-1 m-2 rounded-pill small">ID: @Model.Id</span>
            <span class="position-absolute top-0 end-0 bg-danger text-white px-2 py-1 m-2 rounded fw-bold">Hot</span>
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title text-truncate">@Model.Name</h5>
            <div class="d-flex align-items-center mb-2">
                <div class="rating text-warning me-2">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                </div>
                <span class="text-muted small">(128 đánh giá)</span>
            </div>
            <p class="card-text text-danger fw-bold fs-4 mb-3">@Model.Price.ToString("N0") VNĐ</p>
            <div class="mt-auto">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Details", new { id = Model.Id })" class="btn btn-primary">
                        <i class="fas fa-eye me-2"></i>Xem chi tiết
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
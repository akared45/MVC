@using phao.Models
@model List<Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h2>Courses</h2>

    <form asp-action="SearchCourses" method="post" class="mb-3">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" name="searchTitle" class="form-control"
                           placeholder="Search by title..." value="@ViewBag.SearchTitle" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>
    </form>

    <form asp-action="FilterCourses" method="post" class="mb-3">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <select name="minCredits" class="form-select">
                        <option value="">Filter by credits...</option>
                        <option value="1" selected="@(ViewBag.MinCredits == 1)">1+ credits</option>
                        <option value="2" selected="@(ViewBag.MinCredits == 2)">2+ credits</option>
                        <option value="3" selected="@(ViewBag.MinCredits == 3)">3+ credits</option>
                        <option value="4" selected="@(ViewBag.MinCredits == 4)">4+ credits</option>
                        <option value="5" selected="@(ViewBag.MinCredits == 5)">5 credits</option>
                    </select>
                    <button type="submit" class="btn btn-info">Filter</button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </div>
    </form>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewBag.TitleSortParam"
                       asp-route-page="@ViewBag.CurrentPage"
                       class="text-white text-decoration-none">
                        Title @(ViewBag.CurrentSort == "title_desc" ? "▼" : "▲")
                    </a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewBag.CreditsSortParam"
                       asp-route-page="@ViewBag.CurrentPage"
                       class="text-white text-decoration-none">
                        Credits @(ViewBag.CurrentSort == "credits_desc" ? "▼" :
                                                ViewBag.CurrentSort == "credits" ? "▲" : "")
                    </a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewBag.DepartmentSortParam"
                       asp-route-page="@ViewBag.CurrentPage"
                       class="text-white text-decoration-none">
                        Department @(ViewBag.CurrentSort == "department_desc" ? "▼" :
                                                ViewBag.CurrentSort == "department" ? "▲" : "")
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Credits</td>
                    <td>@item.Department</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        @if (ViewBag.CurrentPage > 1)
        {
            <a asp-action="Index"
               asp-route-sortOrder="@ViewBag.CurrentSort"
               asp-route-page="@(ViewBag.CurrentPage - 1)"
               class="btn btn-primary">Previous</a>
        }

        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a asp-action="Index"
               asp-route-sortOrder="@ViewBag.CurrentSort"
               asp-route-page="@i"
               class="btn @(i == ViewBag.CurrentPage ? "btn-success" : "btn-outline-primary")">@i</a>
        }

        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
        {
            <a asp-action="Index"
               asp-route-sortOrder="@ViewBag.CurrentSort"
               asp-route-page="@(ViewBag.CurrentPage + 1)"
               class="btn btn-primary">Next</a>
        }
    </div>
</div>
@model phao.Models.Enrollment

@{
    ViewData["Title"] = "Delete Enrollment";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Enrollment</h2>
    <h4>Are you sure you want to delete this?</h4>

    <div class="alert alert-warning">
        <h5>Enrollment Details</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Student Name:</dt>
            <dd class="col-sm-9">@Model.StudentName</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.StudentEmail</dd>

            <dt class="col-sm-3">Course:</dt>
            <dd class="col-sm-9">@Model.Course.Title</dd>

            <dt class="col-sm-3">Enrollment Date:</dt>
            <dd class="col-sm-9">@Model.EnrollmentDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Grade:</dt>
            <dd class="col-sm-9">@(Model.Grade?.ToString("0.0") ?? "N/A")</dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <div class="form-group mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
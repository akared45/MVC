@using phao.Models
@model List<Enrollment>

@{
    ViewData["Title"] = "Enrollments List";
}

<div class="container mt-4">
    <h2>Enrollments</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Create New</a>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Student Name</th>
                <th>Email</th>
                <th>Course</th>
                <th>Enrollment Date</th>
                <th>Grade</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StudentName</td>
                    <td>@item.StudentEmail</td>
                    <td>@item.Course.Title</td>
                    <td>@item.EnrollmentDate.ToString("dd/MM/yyyy")</td>
                    <td>@item.Grade</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                </li>
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm('Are you sure you want to delete this enrollment?')) {
                window.location.href = '/Enrollments/Delete/' + id;
            }
        }
    </script>
}